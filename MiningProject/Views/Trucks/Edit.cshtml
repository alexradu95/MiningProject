@model MiningProject.Models.Truck
    <section class="content">
        @{
            ViewData["Title"] = "Edit";
        }

        <h2>Edit</h2>

        <h4>Truck</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="PlateNumber" class="control-label"></label>
                        <input asp-for="PlateNumber" class="form-control" />
                        <span asp-validation-for="PlateNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TruckType" class="control-label"></label>
                        <input asp-for="TruckType" class="form-control" />
                        <span asp-validation-for="TruckType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </section>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
